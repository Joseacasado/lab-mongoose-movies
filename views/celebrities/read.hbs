<div class="row justify-content-center">
  <div class="col-md-5">
    <h2>{{name}}</h2>

    <ul>
      <li><strong>Occupation:</strong> {{occupation}}</li>
      <li><strong>CatchPhrase:</strong> {{catchPhrase}}</li>
    </ul>

    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <a class="btn btn-outline-warning" href="/celebrities/{{_id}}/edit">Edit celebrity</a>
      <a class="btn btn-outline-danger d-block" href="/celebrities/{{_id}}/delete">Remove {{name}}</a>
      <a class="btn btn-outline-secondary d-block" href="/celebrities">Go back</a>
    </div>


  </div>
</div>
