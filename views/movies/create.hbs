<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Add new Movie</h2>
            <form method="POST" action="/movies/create-movies">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" required>
                </div>
                <div class="form-group">
                    <label>Genre</label>
                    <input type="text" class="form-control" name="genre">
                </div>
                <div class="form-group">
                    <label>Plot</label>
                    <input type="text" class="form-control" name="plot">
                </div>
                <button type="submit" class="btn btn-outline-success">Create new Movie</button>
            </form>
        </div>
    </div>
</div>